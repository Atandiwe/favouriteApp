<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaavouriteApp.PhoneDialer" Title="Dialer"  IconImageSource="keypad.png" >
    <ContentPage.Content>
        
        <StackLayout Padding ="16">
        <Entry Text="" Placeholder="Phone number" x:Name="EntryNumber" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Keyboard="Numeric"/>
        <ImageButton Source="dailer.png" Clicked="Button_Clicked" BorderColor="Green" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
        </StackLayout>
       
    </ContentPage.Content>
</ContentPage>